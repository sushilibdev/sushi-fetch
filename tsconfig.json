{
  "compilerOptions": {
    /* ========================================= */
    /* üöÄ TARGET & ENVIRONMENT                   */
    /* ========================================= */
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* ========================================= */
    /* üì¶ LIBRARY PUBLISHING (NPM WAJIB)         */
    /* ========================================= */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",

    /* ========================================= */
    /* üõ°Ô∏è STRICTNESS & QUALITY                   */
    /* ========================================= */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* ========================================= */
    /* ‚ö° PERFORMANCE & INTEROP                  */
    /* ========================================= */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "examples/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}